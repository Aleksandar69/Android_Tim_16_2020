<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="test@test.com"
        android:id="@+id/columnFrom"
        android:layout_width="@dimen/listViewFromWidth"
        android:layout_height="@dimen/listViewFromHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:text="test"
        android:id="@+id/columnSubject"
        android:layout_width="@dimen/listViewSubjectWidth"
        android:layout_height="@dimen/listViewSubjectHeight"
        android:layout_toEndOf="@id/columnFrom"
        android:layout_toRightOf="@id/columnFrom"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:text="test"
        android:textColor="#868a91"
        android:id="@+id/columnContent"
        android:layout_width="@dimen/listViewContentWidth"
        android:layout_height="@dimen/listViewContentHeight"
        android:layout_toEndOf="@id/columnSubject"
        android:layout_toRightOf="@id/columnSubject"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <TextView
        android:text="test"
        android:textColor="#5c6066"
        android:id="@+id/columnDate"
        android:layout_below="@id/columnContent"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"/>

</RelativeLayout>