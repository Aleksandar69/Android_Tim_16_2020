<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EmailsActivity"
    android:orientation="vertical">


    <include
        android:id="@+id/emails_toolbar"
        layout="@layout/toolbar_layout"/>

<androidx.drawerlayout.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="EmailsActivity"
            style="@style/TextAppearance.AppCompat.Large"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Item"
            android:onClick="onTempButtonClickedFind"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/searchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SEARCH"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/searchText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SEARCH"
            android:layout_gravity="center_horizontal"
            />

        <ListView
            android:id="@+id/emails_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:divider="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:clickable="true"
            android:dividerHeight="10.0sp"
            android:scrollbars="vertical" />

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/menu_nav"
        app:headerLayout="@layout/nav_layout"
        android:layout_gravity="start"
        android:onClick="onProfileClicked"/>

</androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>